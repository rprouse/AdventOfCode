    <StartupObject>AdventOfCode2015.ProgramEntry</StartupObject>
    <LangVersion>7.2</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Day01\Data.txt" />
    <None Remove="Day00\Data.txt" />
